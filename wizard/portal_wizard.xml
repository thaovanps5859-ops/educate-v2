<odoo>
    <data>
        <record id="wk_portal_wizard_user_form" model="ir.ui.view">
            <field name="name">wk.portal.wizard.user.form</field>
            <field name="model">wk.portal.wizard.user</field>
            <field name="arch" type="xml">
                <form string="Portal User Access">
                    <sheet>
                        <group>
                            <group>
                                <field name="access_choice" string="Portal Access" widget='radio'/>
                            </group>
                            <div>
                                <div invisible="access_choice == 'dual_access'" class="alert alert-info"
                                    role="alert">
                                    <b>Single Access:-</b>
                                    <div>
                                        <ul>
                                            <li>Students and parents can access the portal using the parent's registered email ID.</li>
                                            <li>The portal provides full access, including fee payment functionality.</li>
                                        </ul>
                                    </div>
                                </div>
                                <div invisible="access_choice == 'single_access'" class="alert alert-info"
                                    role="alert">
                                    <b>Dual Access:-</b>
                                    <div>
                                        <ul>
                                            <li>Students and parents will have separate portal access.</li>
                                            <li>Students can perform all academic activities.</li>
                                            <li>Parents can additionally manage fee payments.</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </group>
                        <span class="o_field_label fw-bold" style="color:black;opacity:0.9;">Student Information:</span>
                        <field name="student_ids" options="{'no_create': True}" widget="many2many_tags"/>
                        <div invisible="access_choice == 'single_access'" class="o_field_label fw-bold" style="color:black;opacity:0.9;">Parent Information:</div>
                        <field invisible="access_choice == 'single_access'" name="parent_ids" options="{'no_create': True}">
                            <list create="0">
                                <field name="complete_name" string="Name"/>
                                <field name="email"/>
                            </list>
                        </field>
                    </sheet>
                    <footer>
                        <button name="grant_now" type="object" string="Grant Now" class="btn-success"/>
                        <button string="Cancel" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>