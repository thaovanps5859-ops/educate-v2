<odoo>
    <data>
    <!-- FOR STUDENT ASSIGNMENT -->
        <record id='submit_assignment_action' model='ir.actions.server'>
            <field name='name'>Submit Assignments</field>
            <field name='model_id' ref="wk_school_management.model_wk_student_assignment"/>
            <field name="binding_model_id" ref="wk_school_management.model_wk_student_assignment"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.submit_assignment_action()
            </field>
        </record>

        <record id='evaluate_assignment_action' model='ir.actions.server'>
            <field name='name'>Evaluate Assignments</field>
            <field name='model_id' ref="wk_school_management.model_wk_student_assignment"/>
            <field name="binding_model_id" ref="wk_school_management.model_wk_student_assignment"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.evaluate_assignment_action()
            </field>
        </record>

    <!-- FOR SERVICE HOURS -->
        <record id='approve_service_hour_action' model='ir.actions.server'>
            <field name='name'>Approve Service Hours</field>
            <field name='model_id' ref="wk_school_management.model_wk_service_hours"/>
            <field name="binding_model_id" ref="wk_school_management.model_wk_service_hours"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.approve_service_hour()
            </field>
        </record>

        <record id='reject_service_hour_action' model='ir.actions.server'>
            <field name='name'>Reject Service Hours</field>
            <field name='model_id' ref="wk_school_management.model_wk_service_hours"/>
            <field name="binding_model_id" ref="wk_school_management.model_wk_service_hours"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.reject_service_hour()
            </field>
        </record>

    <!-- FOR STUDENT TRANSCRIPT -->
        <record id='student_transcript_action' model='ir.actions.server'>
            <field name='name'>Student Transcript</field>
            <field name='model_id' ref="wk_school_management.model_student_student"/>
            <field name="binding_model_id" ref="wk_school_management.model_student_student"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                if records:
                    action = records.action_print_student_transcript()
            </field>
        </record>

    <!-- FOR STUDENT ENROLLMENT -->
        <record id='promote_bulk_enrollments_action' model='ir.actions.server'>
            <field name='name'>Promote Students</field>
            <field name='model_id' ref="wk_school_management.model_student_enrollment"/>
