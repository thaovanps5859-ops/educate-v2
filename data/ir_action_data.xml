        <record id='terminate_bulk_enrollments_action' model='ir.actions.server'>
            <field name='name'>Terminate Students</field>
            <field name='model_id' ref="wk_school_management.model_student_enrollment"/>
            <field name="binding_model_id" ref="wk_school_management.model_student_enrollment"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
