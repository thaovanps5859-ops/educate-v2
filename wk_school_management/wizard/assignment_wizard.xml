<odoo>
    <data>
        <record id="assignment_wizard_form" model="ir.ui.view">
            <field name="name">wk.assignment.wizard.form</field>
            <field name="model">wk.assignment.wizard</field>
            <field name="arch" type="xml">
                <form string="Assignment">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="class_id"/>
                            </h1>
                            <h3>
                                <field name="name" placeholder="Assignment Title.."/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="type_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="assignment_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="no_of_days" readonly="0"/>
                                <field name="grade_id"/>
                                <field name="section_id" invisible="not section_visibility"/>
                            </group>
                            <group>
                                <field name="start_date" readonly="0"/>
                                <field name="end_date" readonly="0"/>
                                <field name="total_marks"/>
                                <field name="subject_id"/>
                                <field name="type_ids_domain" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="assign_now" type='object' string='Assign Now' class='oe_highlight'/>
                        <button special='cancel' string='Discard'/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wk_discipline_wizard_form" model="ir.ui.view">
            <field name="name">wk.discipline.wizard.form</field>
            <field name="model">wk.discipline.wizard</field>
            <field name="arch" type="xml">
                <form string="Assign Discipline">
                    <sheet>
                        <div class="oe_title">
                            <h4>
                                <field name="name" placeholder="Title.."/>
                            </h4>
                        </div>
                        <group>
                            <group>
                                <field name="discipline_type" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="student_ids" string="Student Involved" widget="many2many_tags" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="incident_date"/>
                                <field name="class_timetable_id" readonly="1"/>
                            </group>
                        </group>
                        <group string="Comments">
                            <field colspan="2" name="summary" nolabel="1" placeholder="Summary.."/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="assign_discipline" type='object' string='Assign Now' class='oe_highlight'/>
                        <button special='cancel' string='Discard'/>
                    </footer>
                </form>
            </field>
        </record>
    </data>    
</odoo>    
