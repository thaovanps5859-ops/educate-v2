<odoo>
    <data>
        <record id="wk_evaluation_wizard_form" model="ir.ui.view">
            <field name="name">wk.evaluation.wizard.form</field>
            <field name="model">wk.evaluation.wizard</field>
            <field name="arch" type="xml">
                <form string="Assignment Evaluation">
                    <sheet>
                        <group>
                            <group>
                                <field name="assignment_id" readonly="1"/>
                                <field name="grade_id" readonly="1"/>
                                <field name="section_id" invisible="not section_visibility" readonly="1"/>
                                <field name="subject_id" readonly="1"/> 
                                <field name="start_date" readonly="1"/>
                                <field name="class_assignment_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="type_id" readonly="1" />
                                <field name="total_marks" readonly="1"/>
                                <field name="scale_id" readonly="1"/>                             
                                <field name="end_date" readonly="1"/>
                            </group>
                        </group>
                        <field name="student_assignment_ids" domain="[('assignment_id', '=',assignment_id),('class_assignment_id','=',class_assignment_id)]" >
                            <list string="Assignments" editable="bottom" create="0">
                                <field name='student_id' readonly="1"/>
                                <field name="marks_obtained" readonly="state == 'new'"  force_save="1"/>
                                <field name="scale_line_id" readonly="1" force_save="1" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="percent_obtained" readonly="1"  force_save="1"/>
                                <field name="point_obtained" readonly="1" force_save="1"/>
                                <field name="exempted" readonly="state == 'new'"  force_save="1"/>
                                <field name="description"/>
                                <field name='student_subject_id_domain' column_invisible='1'/>
                                <field name='subject_id' column_invisible='1'/>
                                <field name='scale_line_id_domain' column_invisible='1'/>
                                <field name="state" widget="badge" force_save="1" decoration-success="state =='evaluate'" decoration-warning="state =='submit'"/>
                                <button name="submit_assignment_button" type="object" class="btn btn-link fa fa-upload" invisible="state !='new'" title="Submit Assignment"/>
                            </list>
                        </field>

                        <span><field name="lowest_score" nolabel="1" widget="checkbox"/><i class="fa fa-exclamation-triangle"/> Assign the lowest grade to the students who haven't submitted their assignments.</span>
                    </sheet>
                    <footer>
                        <button name="submit_score" type='object' string='Submit' class='oe_highlight'/>
                        <button special='cancel' string='Discard'/><br/>
                    </footer>
                </form>
            </field>
        </record>

    <!-- FORM VIEW FOR SUBMIT ASSIGNMENT SERVER ACTION -->

        <record id="wk_evaluation_wizard_submit_form" model="ir.ui.view">
            <field name="name">wk.evaluation.wizard.submit.form</field>
            <field name="model">wk.evaluation.wizard</field>
            <field name="arch" type="xml">
                <form string="Assignment Submission">
                    <sheet>
                        <group>
                            <group>
                                <field name="assignment_id" readonly="1"/>
                                <field name="grade_id" readonly="1"/>
                                <field name="section_id" invisible="not section_visibility" readonly="1"/>
                                <field name="subject_id" readonly="1"/> 
                                <field name="start_date" readonly="1"/>
                                <field name="class_assignment_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="type_id" readonly="1" />
                                <field name="total_marks" readonly="1"/>
                                <field name="scale_id" readonly="1"/>                             
                                <field name="end_date" readonly="1"/>
                            </group>
                        </group>
                        <field name="student_assignment_ids" domain="[('assignment_id', '=',assignment_id),('class_assignment_id','=',class_assignment_id)]" >
                            <list string="Assignments" editable="bottom" create="0">
                                <field name='student_id' readonly="1"/>
                                <field name="submit_attachment_type"/>
                                <field name="submitted_assignment_attachment" filename="filename"/>
                                <field name="filename" column_invisible="1"/>
                                <field name="submit_comment"/>
                            </list>
                        </field>
                    </sheet>
                    <footer>
                        <button name="submit_assignment" type='object' string='Submit' class='oe_highlight'/>
                        <button special='cancel' string='Discard'/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wk_evaluation_wizard_action" model="ir.actions.act_window">
            <field name="name">Assignment Evaluation</field>
            <field name="res_model">wk.evaluation.wizard</field>
            <field name="view_mode">form,list</field>
            <field name="target">new</field>
            <field name="view_id" ref="wk_evaluation_wizard_form"/>
        </record>

    </data>    
</odoo>    
