<odoo>
    <data>
        <record id="class_location_form" model="ir.ui.view">
            <field name="name">wk.class.location.form</field>
            <field name="model">wk.class.location</field>
            <field name="arch" type="xml">
                <form string="Location">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <div class="oe_title">
                            <h1>
                                <label for="name" string="Name"/>
                                <field name="name" placeholder="Meeting room 1...."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="class_location_tree" model="ir.ui.view">
            <field name="name">wk.class.location.list</field>
            <field name="model">wk.class.location</field>
            <field name="arch" type="xml">
                <list string="Location">
                   <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="show"
                        readonly="1"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <record id="wk_class_location_search" model="ir.ui.view">
           <field name="name">wk.class.location.search</field>
           <field name="model">wk.class.location</field>
           <field name="arch" type="xml">
               <search>
                    <field name="name" string="Name"/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="archived" string="Archived" domain="[('active','!=',True)]"/>
                    <group expand="0" string="Group by...">
                        <filter name="group_by_school"  string="School" domain="[]" context="{'group_by':'company_id'}" />
                    </group>
               </search>
           </field>
        </record>
        
        <record id="class_location_action" model="ir.actions.act_window">
            <field name="name">Class Locations</field>
            <field name="res_model">wk.class.location</field>
            <field name="view_mode">form,list</field>
            <field name="view_id" ref="class_location_tree"/>
            <field name="path">school-class-location</field>
        </record>

    </data>    
</odoo>    
