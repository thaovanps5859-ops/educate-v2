<odoo>
    <data>
        <record id="wk_fee_summary_view_form" model="ir.ui.view">
            <field name="name">wk.fee.summary.view.form</field>
            <field name="model">wk.fee.summary</field>
            <field name="arch" type="xml">
                <form string="Fee Summary">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="fee"/>
                            </group>
                            <group>
                                <field name="frequency"/>
                                <field name="amount_paid"/>
                                <field name="slip_generated" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_fee_summary_view_list" model="ir.ui.view">
            <field name="name">wk.fee.summary.list</field>
            <field name="model">wk.fee.summary</field>
            <field name="arch" type="xml">
                <list string="Fee Summary">
                    <field name="sequence" widget="handle"/>
                    <field name="product_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                    <field name="fee" sum="Total"/>
                    <field name="frequency"/>
                    <field name="amount_paid"/>
                    <field name="slip_generated"/>
                </list>
            </field>
        </record>   

    <!-- FEE SLIP VIEWS -->

        <record id="wk_fee_slip_view_form" model="ir.ui.view">
            <field name="name">wk.fee.slip.form</field>
            <field name="model">wk.fee.slip</field>
            <field name="arch" type="xml">
                <form string="Fee Slip">
                    <header invisible="id == False">
                        <button string="Confirm" name="confirm_fee_slip" type="object" class="oe_highlight" confirm="Are you sure you want to confirm this fee slip?" invisible="state != 'new'" />
                        <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-primary"
                            invisible="state in ('new','paid')"/>
                        <button name="preview_invoice" string="View Invoice" type="object" class="btn-secondary" invisible="not invoice_ids"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,to_pay,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoice" icon="fa-pencil-square-o" type="object" 
                                class="oe_stat_button"
                                string="Invoices" invisible="not invoice_ids"/>
                            <button name="action_view_payment_transactions" type="object" class="oe_stat_button" icon="fa-money" invisible="not transaction_ids">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Payment Transaction</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <label for="name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="student_id"/>
                                <field name="academic_year_id"/>
                                <field name="date_from"/>
                                <field name="currency_id"/>  
                            </group>
                            <group>
                                <field name="grade_id"/>
                                <field name="section_id" invisible="not section_visibility" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="session_id"/>
                                <field name="date_to"/>
                                <field name="total_amount" />
                                <field name="paid_amount" />
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                                <field name="invoice_ids" invisible="1"/>
                                <field name="transaction_ids" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Amount Breakup">
                                <field name="fee_slip_line_ids" readonly="state != 'new'">
                                    <list>
                                        <field name="product_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                        <field name="fee" sum="Total"/>
                                    </list>
                                </field>
                            </page>
                            <page name="terms_and_conditions" string="Terms and Conditions">
                                <group string="Terms and Conditions">
                                    <field colspan="2" name="description" nolabel="1" placeholder="Terms and conditions..."/>
                                </group>
                            </page> 
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="wk_fee_slip_view_tree" model="ir.ui.view">
            <field name="name">wk.fee.slip.list</field>
            <field name="model">wk.fee.slip</field>
            <field name="arch" type="xml">
                <list string="Fee Slip">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="grade_id"/>
                    <field name="section_id" optional="hide"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="total_amount" sum="Total"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="show"
                        readonly="1"/>
                    <field name="create_date"/> 
                    <field name="write_date"/>                                      
                    <field name="state"  decoration-success="state=='paid'" decoration-warning="state =='to_pay'" decoration-primary="state =='new'" decoration-info="state == 'overdue'" widget='badge'/> 
                </list>
            </field>
        </record>

        <record id="wk_fee_slip_view_search" model="ir.ui.view">
           <field name="name">wk.fee.slip.search</field>
           <field name="model">wk.fee.slip</field>
           <field name="arch" type="xml">
               <search>
                    <field name="student_id" string="Fee Slips" filter_domain="['|','|',('enrollment_id', 'ilike', self),('student_id', 'ilike', self),('grade_id', 'ilike', self)]"/>
                    <separator/>
                    <filter name="paid" string="Paid" domain="[('state','=','paid')]"/>
                    <filter name="to_pay" string="To Pay" domain="[('state','=','to_pay')]"/>
                    <filter name="new" string="New" domain="[('state','=','new')]"/>
                     <group expand="0" string="Group by...">
                        <filter name="group_by_state"  string="Status" domain="[]" context="{'group_by':'state'}" />
                        <filter name="group_by_student"  string="Student" domain="[]" context="{'group_by':'student_id'}" />
                        <filter name="group_by_grade"  string="Grade" domain="[]" context="{'group_by':'grade_id'}" />
                        <filter name="group_by_session"  string="Session" domain="[]" context="{'group_by':'session_id'}" />
                        <filter name="group_by_academic_year"  string="Academic Year" domain="[]" context="{'group_by':'academic_year_id'}" />
                        <filter name="group_by_school"  string="School" domain="[]" context="{'group_by':'company_id'}" />
                    </group>
               </search>
           </field>
        </record>

        <record id="wk_fee_slip_action" model="ir.actions.act_window">
            <field name="name">Fee Slip</field>
            <field name="res_model">wk.fee.slip</field>
            <field name="view_mode">list,form</field>
            <field name="path">student-fee-slip</field>
            <field name="view_id" ref="wk_fee_slip_view_tree"/>
        </record>

        <record id="wk_fee_slip_lines_view_form" model="ir.ui.view">
            <field name="name">wk.fee.slip.lines.view.form</field>
            <field name="model">wk.fee.slip.lines</field>
            <field name="arch" type="xml">
                <form string="Fee Summary">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="fee"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
