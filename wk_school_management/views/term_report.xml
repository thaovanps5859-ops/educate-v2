<odoo>

    <data>
        <record id="wk_term_reports_form" model="ir.ui.view">
            <field name="name">wk.term.reports.form</field>
            <field name="model">wk.term.reports</field>
            <field name="arch" type="xml">
                <form string="Term Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="student_subject_id"/>
                            </h1>
                            <h2>
                                <field name="student_id"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="session_id"/>
                                <field name="term_id"/>
                                <field name="subject_id"/>
                                <field name="point_obtained"/>
                            </group>
                            <group >
                                <field name="academic_year_id"/>
                                <field name="grade_id"/>
                                <field name="section_id" invisible="not section_visibility" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="total_assignments"/>
                                <field name="scale_line_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_term_reports_tree" model="ir.ui.view">
            <field name="name">wk.term.reports.list</field>
            <field name="model">wk.term.reports</field>
            <field name="arch" type="xml">
                <list string="Term Reports">
                    <field name="term_id"/>
                    <field name="total_assignments"/>
                    <field name="point_obtained"/>
                    <field name="scale_line_id"/>
                </list>
            </field>
        </record>
        
        <record id="wk_term_reports_action" model="ir.actions.act_window">
            <field name="name">Term Reports</field>
            <field name="res_model">wk.term.reports</field>
            <field name="path">student-term-report</field>
            <field name="view_mode">form,list</field>
            <field name="view_id" ref="wk_term_reports_tree"/>
        </record>
    </data>    
</odoo>    
