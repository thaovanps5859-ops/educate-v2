<odoo>

    <data>
        <record id="wk_notice_board_form" model="ir.ui.view">
            <field name="name">wk.notice.board.form</field>
            <field name="model">wk.notice.board</field>
            <field name="arch" type="xml">
                <form string="Notice">
                    <header invisible="id == False"> 
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" string="Title"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="visibility" widget="radio"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field colspan="2" name="description" nolabel="1" placeholder="Type your notice here.."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_notice_board_tree" model="ir.ui.view">
            <field name="name">wk.notice.board.list</field>
            <field name="model">wk.notice.board</field>
            <field name="arch" type="xml">
                <list string="Notice">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="visibility"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="show"
                        readonly="1"/>
                    <field name="state" widget="badge" decoration-success="state =='active'" decoration-danger="state =='inactive'"/>
                </list>
            </field>
        </record>

        <record id="wk_notice_board_search" model="ir.ui.view">
           <field name="name">wk.notice.board.search</field>
           <field name="model">wk.notice.board</field>
           <field name="arch" type="xml">
               <search string="Notice Board">
                    <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    <filter name="active" string="Active" domain="[('state','=','active')]"/>
                    <filter string="Current Month" name="current_month" domain="[('start_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('start_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                    <group expand="0" string="Group by...">
                        <filter name="group_visibility" string="Prepared By" domain="[]" context="{'group_by':'visibility'}"/>
                        <filter name="group_by_school"  string="School" domain="[]" context="{'group_by':'company_id'}" />
                    </group>
               </search>
           </field>
        </record>

        <record id="wk_notice_board_action" model="ir.actions.act_window">
            <field name="name">Notice Board</field>
            <field name="res_model">wk.notice.board</field>
            <field name="view_mode">form,list</field>
            <field name="view_id" ref="wk_notice_board_tree"/>
            <field name="path">school-notice-board</field>
        </record>

    </data>    
</odoo>    
