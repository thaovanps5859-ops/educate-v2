<odoo>

    <data>
        <record id="wk_service_hours_form" model="ir.ui.view">
            <field name="name">wk.service.hours.form</field>
            <field name="model">wk.service.hours</field>
            <field name="arch" type="xml">
                <form string="Service Hours">
                    <header>
                        <button string="Approve" name="approve_service_hour" type="object" class="oe_highlight bg-success" invisible="(state != 'new') or (id == False)" confirm="Are you sure you want to mark this service hour as approved?"/>
                        <button string="Reject" name="reject_service_hour" type="object" class="oe_highlight bg-danger" invisible="(state != 'new') or (id == False)" confirm="Are you sure you want to mark this service hour as rejected?"/>
                        <field name="state" widget='statusbar' statusbar_visible='new,approve'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Title" readonly="state in 'approve,reject'"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="student_id" readonly="state in 'approve,reject'" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="start_time" readonly="state in 'approve,reject'"/>
                                <field name="total_hours" widget="float_time" readonly="state in 'approve,reject'"/>
                                <field name="end_time" readonly="1"/>
                            </group>
                            <group>
                                <field name="enrollment_id"/>
                                <field name="supervisor_id" readonly="state in 'approve,reject'" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="approver_id" readonly="1"/>
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group string="Comments">
                            <field colspan="2" name="comment" nolabel="1" placeholder="Comments.." readonly="state in 'approve,reject'"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="wk_service_hours_tree" model="ir.ui.view">
            <field name="name">wk.service.hours.list</field>
            <field name="model">wk.service.hours</field>
            <field name="arch" type="xml">
                <list string="Service Hours">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="supervisor_id"/>
                    <field name="approver_id"/>
                    <field name="start_time"/>
                    <field name="end_time" optional="show"/>
                    <field name="total_hours" widget="float_time"/>
                    <field name="create_date" optional="hide"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="hide"
                        readonly="1"/>
                    <field name="state" widget="badge" decoration-success="state == 'approve'" decoration-danger="state =='reject'" decoration-primary="state =='new'"/>
                    <button name="approve_service_hour" icon="fa-check-circle" type="object" class="oe_highlight bg-success" invisible="(state != 'new') or (id == False)" confirm="Are you sure you want to mark this service hour as approved?" title="Approve"/>
                    <button name="reject_service_hour" icon="fa-times-circle" type="object" class="oe_highlight bg-danger" invisible="(state != 'new') or (id == False)" confirm="Are you sure you want to mark this service hour as rejected?" title="Reject"/>
                </list>
            </field>
        </record>

        <record id="wk_service_hours_search" model="ir.ui.view">
           <field name="name">wk.service.hours.search</field>
           <field name="model">wk.service.hours</field>
           <field name="arch" type="xml">
               <search>
                    <field name="student_id"/>
                    <filter name="new" string="New" domain="[('state','=','new')]"/>
                    <filter name="approve" string="Approved" domain="[('state','=','approve')]"/>
                    <filter name="reject" string="Rejected" domain="[('state','=','reject')]"/>
                    <group expand="0" string="Group by...">
                        <filter name="group_by_student"  string="Student" domain="[]" context="{'group_by':'student_id'}" />
                        <filter name="group_by_supervisor"  string="Supervisor" domain="[]" context="{'group_by':'supervisor_id'}" />
                        <filter name="group_by_state"  string="Status" domain="[]" context="{'group_by':'state'}" />
                    </group>
               </search>
           </field>
        </record>
        
        <record id="wk_service_hours_calendar" model="ir.ui.view">
            <field name="name">wk.service.hours.calendar</field>
            <field name="model">wk.service.hours</field>
            <field name="arch" type="xml">
                <calendar string="Service Hours" event_limit="5" mode="month" date_start="start_time" date_stop="end_time" color="state">
                    <field name="student_id"/>
                    <field name="supervisor_id" filters="1"/>
                    <field name="approver_id"/>
                    <field name="total_hours"/>
                    <field name="state" filters="1"/>
                </calendar>
            </field>
        </record>
        
        <record id="wk_service_hours_action" model="ir.actions.act_window">
            <field name="name">Service Hours</field>
            <field name="res_model">wk.service.hours</field>
            <field name="view_mode">form,list,calendar</field>
            <field name="path">student-service-hours</field>
            <field name="view_id" ref="wk_service_hours_tree"/>
        </record>
    </data>    
</odoo>    
