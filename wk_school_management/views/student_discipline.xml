<odoo>
    <data>
        <record id="wk_discipline_type_form" model="ir.ui.view">
            <field name="name">wk.discipline.type.form</field>
            <field name="model">wk.discipline.type</field>
            <field name="arch" type="xml">
                <form string="Discipline Type">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" string="Name"/>
                                <field name="name" placeholder="Misbehave.."/>
                            </h1>
                        </div>
                        <group string="Description">
                            <field colspan="2" name="description" nolabel="1" placeholder="Description.."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_discipline_type_tree" model="ir.ui.view">
            <field name="name">wk.discipline.type.list</field>
            <field name="model">wk.discipline.type</field>
            <field name="arch" type="xml">
                <list string="Discipline Type">
                   <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="write_uid"/>
                    <field name="write_date"/>
                </list>
            </field>
        </record>
        
        <record id="wk_discipline_type_action" model="ir.actions.act_window">
            <field name="name">Discipline Type</field>
            <field name="res_model">wk.discipline.type</field>
            <field name="view_mode">form,list</field>
            <field name="path">school-discipline-type</field>
            <field name="view_id" ref="wk_discipline_type_tree"/>
        </record>


        <!-- STUDENT DISCIPLINE FORM -->

        <record id="wk_student_discipline_form" model="ir.ui.view">
            <field name="name">wk.student.discipline.form</field>
            <field name="model">wk.student.discipline</field>
            <field name="arch" type="xml">
                <form string="Student Discipline">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="student_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="discipline_type" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group >
                                <field name="enrollment_id"/>
                                <field name="incident_date"/>
                            </group>
                        </group>
                        <group string="Comments">
                            <field colspan="2" name="summary" nolabel="1" placeholder="Summary.."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_student_discipline_class_form" model="ir.ui.view">
            <field name="name">wk.student.discipline.class.form</field>
            <field name="model">wk.student.discipline</field>
            <field name="arch" type="xml">
                <form string="Student Discipline">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="class_timetable_id" readonly="1" force_save="1"/>
                                <field name="student_subject_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="discipline_type" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                            </group>
                            <group >
                                <field name="student_id" readonly="1" force_save="1"/>
                                <field name="enrollment_id"/>
                                <field name="incident_date"/>
                                <field name="student_subject_id_domain" invisible="1"/>
                            </group>
                        </group>
                        <group string="Comments">
                            <field colspan="2" name="summary" nolabel="1" placeholder="Summary.."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_student_discipline_tree" model="ir.ui.view">
            <field name="name">wk.student.discipline.list</field>
            <field name="model">wk.student.discipline</field>
            <field name="arch" type="xml">
                <list string="Student Discipline">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="discipline_type"/>
                    <field name="incident_date"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="show"
                        readonly="1"/>
                    <field name="create_date" optional="hide"/>
                </list>
            </field>
        </record>
        
        <record id="wk_student_discipline_calendar" model="ir.ui.view">
            <field name="name">wk.student.discipline.calendar</field>
            <field name="model">wk.student.discipline</field>
            <field name="arch" type="xml">
                <calendar string="Student Discipline" event_limit="4" date_start="incident_date" color="discipline_type">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="discipline_type" filters="1"/>
                </calendar>
            </field>
        </record>

        <record id="wk_student_discipline_search" model="ir.ui.view">
            <field name="name">wk.student.discipline.search</field>
            <field name="model">wk.student.discipline</field>
            <field name="arch" type="xml">
                <search string="Student Discipline">
                    <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    <group expand="0" string="Group by...">
                        <filter name="group_by_student" string="Student" domain="[]" context="{'group_by':'student_id'}"/>
                        <filter name="group_by_discipline_type" string="Discipline Type" domain="[]" context="{'group_by':'discipline_type'}"/>
                        <filter name="group_by_enrollment" string="Enrollment" domain="[]" context="{'group_by':'enrollment_id'}"/>
                        <filter name="group_by_school"  string="School" domain="[]" context="{'group_by':'company_id'}" />
                        <filter name="group_by_today"  string="Today" domain="[('incident_date','=',context_today())]" context="{}" />
                    </group>
                </search>
            </field>
        </record>
        
        <record id="discipline_action" model="ir.actions.act_window">
            <field name="name">Student Discipline</field>
            <field name="res_model">wk.student.discipline</field>
            <field name="path">student-discipline</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('wk_student_discipline_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('wk_student_discipline_form')})]"/>
        </record>
    </data>    
</odoo>
