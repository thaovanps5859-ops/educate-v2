<odoo>

    <data>
        <record id="wk_student_assignment_form" model="ir.ui.view">
            <field name="name">wk.student.assignment.form</field>
            <field name="model">wk.student.assignment</field>
            <field name="arch" type="xml">
                <form string="Assignments">
                    <header>
                        <!-- <button name="mark_submitted" string="Submit" invisible="state != 'new' or (id == False)" type="object" class="oe_highlight"  confirm="Are you sure you want to submit this assignment?"/>
                        <button name="mark_checked" string="Evaluate" invisible="state != 'submit' or (id == False)" type="object" class="oe_highlight" confirm="Are you sure you want to check this assignment ?"/> -->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="student_subject_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='student_id'/>
                                <field name='start_date'/>
                                <field name="grade_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="section_id" invisible="not section_visibility" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="company_id" readonly="is_single_company" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                                <field name="total_marks" />
                                <field name="marks_obtained"/>
                                <field name="point_obtained"/>
                                <field name='term_id'/>
                                <field name='student_subject_id_domain' invisible='1'/>
                                <field name='scale_line_id_domain' invisible='1'/>
                            </group>
                            <group>
                                <field name='subject_id'/>
                                <field name="end_date"/>
                                <field name='assignment_id'/>
                                <field name='type_id'/>
                                <field name="exempted"/>
                                <field name="percent_obtained"/>
                                <field name="scale_line_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Submitted Assignments">
                                <group>
                                    <field name="submit_attachment_type" readonly="1"/>
                                    <field name="submitted_assignment_attachment" readonly="1" filename="filename" />
                                    <field name="filename" invisible="1"/>
                                    <field name="submit_comment" readonly="1" />
                                </group>
                            </page>
                            <page string="Assignment Description">
                                <group string="Description">
                                    <field colspan="2" name="assignment_description" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Assignment Attachments">
                                <field name='attachment_ids' mode="kanban"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="wk_student_assignment_tree" model="ir.ui.view">
            <field name="name">wk.student.assignment.list</field>
            <field name="model">wk.student.assignment</field>
            <field name="arch" type="xml">
                <list string="Assignments" create="0">
                    <field name='student_id'/>
                    <field name="subject_id"/>
                    <field name='assignment_id'/>
                    <field name="grade_id" optional="hide"/>
                    <field name="section_id" optional="hide"/>
                    <field name="start_date" optional="show"/>
                    <field name="end_date" optional="show"/>
                    <field name="scale_line_id" optional="hide"/>
                    <field name="total_marks" optional="show"/>
                    <field name="marks_obtained" optional="show"/>
                    <field name="percent_obtained" optional="show"/>
                    <field name="point_obtained" optional="show"/>
                    <field name="company_id" groups="!base.group_multi_company" column_invisible="True"/>
                    <field name="company_id"
                        groups="base.group_multi_company"
                        optional="show"
                        readonly="1"/>
                    <field name='type_id' optional="hide"/>
                    <field name="term_id" optional="hide"/>
                    <field name="state" widget="badge" decoration-primary="state =='new'" decoration-success="state =='evaluate'" decoration-warning="state =='submit'"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_date" optional="hide"/>
                    <field name="write_uid" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Filters -->

        <record id="wk_student_assignment_search" model="ir.ui.view">
           <field name="name">wk.student.assignment.search</field>
           <field name="model">wk.student.assignment</field>
           <field name="arch" type="xml">
               <search>
                    <searchpanel>
                        <field name="assignment_id" icon="fa-check-square-o" enable_counters="1"/>
                        <field name="grade_id" icon="fa-id-card-o" enable_counters="1"/>
                    </searchpanel>
                    <field name="student_subject_id"/>
                    <field name="grade_id"/>
                    <field name="assignment_id"/>
                    <filter string="Start From" name="start_date" date="start_date"/>
                    <filter string="End Till" name="end_date" date="end_date"/>
                    <separator/>
                    <filter name="new" string="New" domain="[('state','=','new')]"/>
                    <filter name="submit" string="Submitted" domain="[('state','=','submit')]"/>
                    <filter name="evaluated" string="Evaluated" domain="[('state','=','evaluate')]" />
                    <group expand="0" string="Group by...">
                        <filter name="group_by_populate_class_id"  string="Populate Class" domain="[]" context="{'group_by':'populate_class_id'}" />
                        <filter name="group_by_grade"  string="Grade" domain="[]" context="{'group_by':'grade_id'}" />
                        <filter name="group_by_assignment_id"  string="Grade Assignment" domain="[]" context="{'group_by':'assignment_id'}" />
                        <filter name="group_by_student_id"  string="Student" domain="[]" context="{'group_by':'student_id'}" />
                    </group>
               </search>
           </field>
        </record>
        
        <record id="wk_student_assignment_calendar_view" model="ir.ui.view">
            <field name="name">wk.student.assignment.calendar</field>
            <field name="model">wk.student.assignment</field>
            <field name="arch" type="xml">
                <calendar string="Assignments" create="0" delete="0" quick_create="0" mode="month"
                  date_start="start_date" date_stop="end_date" color="class_assignment_id">
                    <field name="grade_id" filters="1"/>
                    <field name="subject_id"/>
                    <field name="class_assignment_id" filters="1"/>
                    <field name="student_id"/>
                </calendar>
            </field>
        </record>
        
        <record id="wk_student_assignment_action" model="ir.actions.act_window">
            <field name="name">Assignments</field>
            <field name="res_model">wk.student.assignment</field>
            <field name="view_mode">form,list,calendar</field>
            <field name="path">student-assignment</field>
            <field name="view_id" ref="wk_student_assignment_tree"/>
        </record>

    </data>    
</odoo>    
