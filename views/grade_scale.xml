<odoo>
    <data>
        <record id="wk_grade_scales_form" model="ir.ui.view">
            <field name="name">wk.grade.scales.form</field>
            <field name="model">wk.grade.scales</field>
            <field name="arch" type="xml">
                <form string="Grade Scale">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" string="Name"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gpa_calculation" widget="checkbox"/>
                            </group>
                        </group>
                        <notebook>
                            <page string='Scale Lines'>
                                <field name='scale_line_ids' widget="one2many">
                                    <list editable="bottom">
                                        <field name="sequence" widget='handle'/>
                                        <field name="grade_symbol"/>
                                        <field name="max_percent" column_invisible="parent.gpa_calculation == False"/>
                                        <field name="min_percent" column_invisible="parent.gpa_calculation == False"/>
                                        <field name="points" column_invisible="parent.gpa_calculation == False"/>
                                        <field name="conversion_percent" column_invisible="parent.gpa_calculation == False"/>
                                        <field name="effort"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_grade_scales_tree" model="ir.ui.view">
            <field name="name">wk.grade.scales.list</field>
            <field name="model">wk.grade.scales</field>
            <field name="arch" type="xml">
                <list string="Grade Scale">
                    <field name="name"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>
        
        <record id="wk_grade_scales_action" model="ir.actions.act_window">
            <field name="name">Grade Scale</field>
            <field name="res_model">wk.grade.scales</field>
            <field name="view_mode">form,list</field>
            <field name="path">school-grade-scale</field>
            <field name="view_id" ref="wk_grade_scales_tree"/>
        </record>

<!-- list VIEW FOR GRADE SCALE LINES -->
        <record id="wk_grade_scale_line_tree" model="ir.ui.view">
            <field name="name">wk.grade.scale.line.list</field>
            <field name="model">wk.grade.scale.line</field>
            <field name="arch" type="xml">
                <list string="Grade Scale Lines">
                    <field name="grade_symbol"/>
                    <field name="max_percent"/>
                    <field name="min_percent"/>
                    <field name="points"/>
                    <field name="conversion_percent"/>
                    <field name="effort"/>
                </list>
            </field>
        </record>
    </data>    
</odoo>    
