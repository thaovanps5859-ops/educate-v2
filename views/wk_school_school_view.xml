<odoo>

    <data>
        <record id="wk_school_school_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='social_media']" position="before">
                   <group name="school_details" string="Institute Details">
                        <field name="required_document_ids" widget="many2many_tags"/>
                        <field name="show_terms_conditions"/>
                        <label for="terms_conditions" string="Terms and Conditions" invisible="show_terms_conditions == False"/><br></br>
                        <div>
                            <field name="terms_conditions" colspan="2" placeholder="Terms and Conditions.." invisible="show_terms_conditions == False"/>
                        </div>
                    </group>
                </xpath>       
            </field>
        </record>

        <record id="school_school_action" model="ir.actions.act_window">
            <field name="name">Schools</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>    
</odoo>    
