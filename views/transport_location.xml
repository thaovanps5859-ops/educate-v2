<odoo>
    <data>

        <record id="view_transport_location_form" model="ir.ui.view">
            <field name="name">transport.location.form</field>
            <field name="model">transport.location</field>
            <field name="arch" type="xml">
                <form string="Transport Location">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <span class="o_form_label">Location Name</span>
                                <field name="name" placeholder="Location Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <span class="o_form_label o_td_label o_address_type" name="address_name">
                                    <span>Address</span>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" />
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <div name="trip_location_address_country" class="d-flex justify-content-between">
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                                    </div>
                                </div>
                            </group>    
                            <group>
                                <field name="company_id" readonly="is_single_company" string="School" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_transport_location_tree" model="ir.ui.view">
            <field name="name">transport.location.tree</field>
            <field name="model">transport.location</field>
            <field name="arch" type="xml">
                <list string="Transport Locations">
                    <field name="name"/>
                    <field name="street"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <field name="company_id" string="School" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="view_transport_location_search" model="ir.ui.view">
            <field name="name">transport.location.search</field>
            <field name="model">transport.location</field>
            <field name="arch" type="xml">
                <search string="Transport Locations">
                    <field name="name" string="Location Name"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <group expand="0" string="Group by">
                        <filter string="State" name="group_by_state" context="{'group_by': 'state_id'}"/>
                        <filter string="Country" name="group_by_country" context="{'group_by': 'country_id'}"/>
                        <filter string="School" name="group_by_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="action_transport_location" model="ir.actions.act_window">
            <field name="name">Transport Locations</field>
            <field name="res_model">transport.location</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Manage locations for your transport routes.
                </p>
            </field>
        </record>

    </data>
</odoo>
