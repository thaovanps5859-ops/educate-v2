<odoo>

    <data>
        <record id="wk_assignment_attachment_form" model="ir.ui.view">
            <field name="name">wk.assignment.attachment.form</field>
            <field name="model">wk.assignment.attachment</field>
            <field name="arch" type="xml">
                <form string="Assignment Attachment">
                    <sheet>
                        <group name="attachment_details1">
                            <group>
                                <field name="name" placeholder="Maths Assignment Attachement"/>
                                <field name="responsible_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="document" filename="filename"/>
                                <field name="document_type"/>
                                <field name="filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wk_assignment_attachment_tree" model="ir.ui.view">
            <field name="name">wk.assignment.attachment.list</field>
            <field name="model">wk.assignment.attachment</field>
            <field name="arch" type="xml">
                <list string="Assignment Attachement">
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="create_date"/>
                    <field name="write_date"/>
                    <field name="create_uid" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="wk_assignment_attachment_kanban" model="ir.ui.view">
            <field name="name">wk.assignment.attachment.kanban</field>
            <field name="model">wk.assignment.attachment</field>
            <field name="arch" type="xml">
                <kanban class="attachment_box">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="responsible_id"/>
                    <field name="assignment_id"/>
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_aside_full">
                                <t t-if="record.document_type.value == 'Image'">
                                    <img class="o_kanban_image_fill_left" style="max-width: 80px;"
                                        src="/wk_school_management/static/src/img/images.png" alt="image"/>
                                </t>
                                <t t-if="record.document_type.value == 'PDF'">
                                    <img class="o_kanban_image_fill_left d-block" style="max-width: 80px;"
                                        src="/wk_school_management/static/src/img/pdf.png" alt="image"/>
                                </t>
                                <t t-if="record.document_type.value == 'DOC'">
                                    <img class="o_kanban_image_fill_left d-block" style="max-width: 80px;" 
                                        src="/wk_school_management/static/src/img/document.jpg" alt="image"/>
                                </t>
                                <t t-if="record.document_type.value == 'ZIP'">
                                    <img class="o_kanban_image_fill_left d-block" style="max-width: 80px;"  
                                        src="/wk_school_management/static/src/img/zip.png" alt="image"/>
                                </t>
                            </aside>
                            <main class="ps-2 ps-md-0">
                                <strong class="o_kanban_record_title">
                                    <field name="name" placeholder="Attachment's Title"/>
                                </strong>
                                <div t-if="record.responsible_id.raw_value" class="o_text_overflow">
                                    <i class="fa fa-fw me-2 fa-user text-primary" title="Responsible"/>
                                    <field name="responsible_id"/>
                                </div>
                                <div t-if="record.create_date.raw_value" class="o_force_ltr">
                                    <i class="fa fa-fw me-2 fa-calendar text-primary" title="Create Date"/>
                                    <field name="create_date" />
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>    
</odoo>    
